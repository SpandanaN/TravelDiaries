<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="RedActionBarTheme"
        parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/RedActionBar</item>
        <item name="android:textColorPrimary">@color/White</item>
        <item name="android:textColorSecondary">@color/Black</item>
    </style>

    <!-- ActionBar styles -->
    <style name="RedActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/Red</item>
        <item name="android:windowBackground">@color/DarkRed</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="GreenStatusBar.NoActionBar"
        parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@color/DarkerLimeGreen</item>
    </style>

    <style name="BlueStatusBar.NoActionBar"
        parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@color/Blue</item>
    </style>

    <style name="TurquoiseStatusBar.NoActionBar"
        parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@color/DarkerTurquoise</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/White</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="BlackTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>